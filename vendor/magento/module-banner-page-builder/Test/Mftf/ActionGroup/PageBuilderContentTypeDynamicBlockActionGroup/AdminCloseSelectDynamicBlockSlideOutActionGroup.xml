<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCloseSelectDynamicBlockSlideOutActionGroup">
        <annotations>
            <description>Clicks the close button on the Select Dynamic Block slide out form.</description>
        </annotations>
        <waitForElementVisible selector="{{DynamicBlockOnGrid.cancelButton}}" stepKey="waitForCloseButton"/>
        <click selector="{{DynamicBlockOnGrid.cancelButton}}" stepKey="clickCloseButton"/>
        <waitForPageLoad stepKey="waitForSlideOutClose"/>
    </actionGroup>
</actionGroups>
