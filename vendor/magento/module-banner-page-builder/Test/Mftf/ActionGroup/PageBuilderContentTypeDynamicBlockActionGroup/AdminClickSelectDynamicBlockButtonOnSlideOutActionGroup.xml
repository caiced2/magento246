<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminClickSelectDynamicBlockButtonOnSlideOutActionGroup">
        <annotations>
            <description>Clicks the 'Select Dynamic Block' button on the Edit Dynamic Block slide out form.</description>
        </annotations>
        <waitForElementVisible selector="{{DynamicBlockOnForm.selectBlockBtn}}" stepKey="waitForSelectBlockBtn"/>
        <click selector="{{DynamicBlockOnForm.selectBlockBtn}}" stepKey="clickSelectBlockBtn"/>
        <waitForPageLoad stepKey="waitForGridSlideOut"/>
    </actionGroup>
</actionGroups>
