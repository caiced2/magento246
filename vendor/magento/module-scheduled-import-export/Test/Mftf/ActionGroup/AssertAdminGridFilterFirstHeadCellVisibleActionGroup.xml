<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertAdminGridFilterFirstHeadCellVisibleActionGroup">
        <annotations>
            <description>Assert if first head cell in filter grid is visible.</description>
        </annotations>

        <waitForElementVisible selector="{{AdminScheduledExportEditPageAttributesGridSection.headFirstCell}}" stepKey="seeFirstHeadCell"/>
    </actionGroup>
</actionGroups>
