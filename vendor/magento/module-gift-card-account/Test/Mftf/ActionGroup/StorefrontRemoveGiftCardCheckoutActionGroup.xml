<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontRemoveGiftCardCheckoutActionGroup" extends="CartUnapplyGiftCardActionGroup">
        <annotations>
            <description>Removes GiftCard from Order Summary block on checkout page</description>
        </annotations>
        <remove keyForRemoval="waitForAlertMessage"/>
        <seeElementInDOM selector="{{CheckoutOrderSummarySection.successGiftCardMessage(code, 'was removed.')}}" stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
