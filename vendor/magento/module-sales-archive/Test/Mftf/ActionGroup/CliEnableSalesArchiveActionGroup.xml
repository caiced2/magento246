<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CliEnableSalesArchiveActionGroup">
        <annotations>
            <description>Runs bin/magento command to enable order archiving</description>
        </annotations>
        <magentoCLI command="config:set {{ArchivingEnable.path}} {{ArchivingEnable.value}}" stepKey="enableArchiving"/>
    </actionGroup>
</actionGroups>
