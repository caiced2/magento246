<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertCalendarButtonNearDateFieldActionGroup">
        <annotations>
            <description>Assert calendar button near date field customer custom attribute.</description>
        </annotations>
        <arguments>
            <argument name="attributeCode" type="string"/>
        </arguments>

        <seeElement selector="{{StorefrontCustomerCustomAttributeSection.calendarBtn(attributeCode)}}" stepKey="seeCalendarButton"/>
    </actionGroup>
</actionGroups>
