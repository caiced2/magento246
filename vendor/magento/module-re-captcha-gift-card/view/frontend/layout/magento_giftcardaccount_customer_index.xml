<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="redeem">
                <block class="Magento\ReCaptchaUi\Block\ReCaptcha"
                       name="captcha"
                       before="-"
                       template="Magento_ReCaptchaFrontendUi::recaptcha.phtml"
                       ifconfig="recaptcha_frontend/type_for/giftcard">
                    <arguments>
                        <argument name="recaptcha_for" xsi:type="string">giftcard</argument>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="recaptcha" xsi:type="array">
                                    <item name="component" xsi:type="string">Magento_ReCaptchaGiftCard/js/customerAccountReCaptcha</item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
        </referenceBlock>
    </body>
</page>