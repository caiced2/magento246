<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductAssertSetProductAsNewEnabledActionGroup">
        <annotations>
            <description>Assert that "Set Product as New" is enabled on product edit page.</description>
        </annotations>
        <seeCheckboxIsChecked selector="{{AdminProductFormSection.productIsNew}}" stepKey="seeCheckboxIsChecked"/>
    </actionGroup>
</actionGroups>
