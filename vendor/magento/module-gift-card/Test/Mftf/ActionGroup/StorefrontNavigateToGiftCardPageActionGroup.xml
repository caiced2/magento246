<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontNavigateToGiftCardPageActionGroup">
        <annotations>
            <description>Navigates to the Gift Card page in a customer's account on the storefront.</description>
        </annotations>
        <amOnPage url="{{StoreFrontGiftCardPage.url}}" stepKey="navigateToGiftCardPage"/>
        <waitForText userInput="Gift Card" selector="{{StorefrontCustomerAccountMainSection.pageTitle}}" stepKey="waitForPageTitle"/>
    </actionGroup>
</actionGroups>
